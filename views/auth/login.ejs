<link rel="stylesheet" href="/stylesheets/styleLogSign.css" />

<div class="formContainer">
<div class = "form">
<h1>LOGIN</h1>

<%if(!user) {%>
  <h3>Please register to access the Food Buddies</h3>
<%}%>
<form action="/auth/login" method="POST">

<label>Username:<hr><input type="text" placeholder="Your name here" name="username" required ></label>

<label>Password:<hr><input type="password" placeholder="Your password here" name="password" required ></label>

<button>Login</button>

</form>
</div>
</div>

<% if (typeof errorMessage !== 'undefined') { %>
  <p><%= errorMessage %></p>
  <% } %>